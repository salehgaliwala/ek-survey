{
    "title": "Monitoring Project Borehole",
    "sections": [
        {
            "id": "section_1",
            "title": "Section 1: Photos and consent",
            "description": "Note: Only take photos if the respondent agrees. Photos are for audit evidence and QA.",
            "questions": [
                {
                    "id": "1.1",
                    "label": "Consent to participate in this survey (tick one)",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No (end survey)"
                    ],
                    "required": true
                },
                {
                    "id": "1.2",
                    "label": "Consent to take photos (tick one)",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ],
                    "required": true
                },
                {
                    "id": "1.3",
                    "label": "Respondent photo (if consented, otherwise skip)",
                    "type": "file",
                    "dependency": {
                        "question": "1.2",
                        "value": "Yes"
                    }
                },
                {
                    "id": "1.4",
                    "label": "Household/premises photo (if consented, otherwise skip)",
                    "type": "file",
                    "dependency": {
                        "question": "1.2",
                        "value": "Yes"
                    }
                },
                {
                    "id": "1.5",
                    "label": "Project borehole/pump photo (if possible)",
                    "type": "file"
                },
                {
                    "id": "1.6",
                    "label": "GPS coordinates of premises captured by enumerator",
                    "type": "geolocation",
                    "description": "Recommended, but contingent on internet connection"
                }
            ]
        },
        {
