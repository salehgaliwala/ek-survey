                {
                    "id": "7.2",
                    "label": "Do you boil drinking water that comes from the project borehole? (tick one) [SDWS 22 Xcleanboil,y]",
                    "type": "radio",
                    "options": [
                        "Never",
                        "Rarely",
                        "Sometimes",
                        "Often",
                        "Always",
                        "Not applicable (do not use)",
                        "Don’t know / Not sure"
                    ],
                    "required": true
